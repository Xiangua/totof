{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>{% block title %}Deco cuisine{% endblock %}</title>

    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
    {% endblock %}
  </head>

  <body>
    <div class="container">
      <div id="header" class="hero-unit">
        <h1>Deco cuisines et bains</h1>
      </div>

      <div class="row">
        <div id="menu" class="span12">
          <a href="{{ path('ceb_photo_homepage') }}">Galerie</a>
          <a href="{{ path('ceb_present_homepage') }}">Presentation</a>
          <a href="{{ path('ceb_goldbook_homepage') }}">Livre d'or</a>
          <a href="{{ path('ceb_contact_contact') }}">Contact</a>
          <a href="{{ path('ceb_partenaire_homepage') }}">partenaire</a>
        </div>
        <div id="content" class="span9">
          {% block body %}
          {% endblock %}
        </div>
      </div>

      <hr>

      <footer>
        <p>site en construction</p>
      </footer>
    </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
  {% endblock %}

  </body>
</html>